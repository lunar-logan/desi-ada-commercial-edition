def p_comp_list(p):
    '''comp_list : comp_decl_s variant_part_opt
    | variant_part
    | NULL SEMICOLON'''
    if p[1]=='NULL':
        p[0]=None
    elif len(p)==3:
        p[0]=Comp_list_1(p[1],p[2],lineno=p.lineno(1))
    else:
        p[0]=p[1]
        
