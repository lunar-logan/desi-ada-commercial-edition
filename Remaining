def p_fixed_type(p):
    '''fixed_type : DELTA expression range_spec
    | DELTA expression DIGITS expression range_spec_opt'''
    if len(p)==4:
        p[0]=Fixed_type(p[2],None,p[3],lineno=p.lineno(1))
    else:
        p[0]=Fixed_type(p[2],p[3],p[4],lineno=p.lineno(1))
    
def p_array_type(p):
